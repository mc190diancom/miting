<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/colorF5F5F5"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_home_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/main_view"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_home_video_time"
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_gravity="right|bottom"
                android:background="@drawable/video_time_text_bg"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/txt_color_transparent_gray"
                android:text="30:40"
                android:gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_home_item"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:textColor="@color/home_text"
                android:text="@string/home_item_tip"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="15sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>