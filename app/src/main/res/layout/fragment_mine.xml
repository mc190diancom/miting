<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewSwitcher
        android:id="@+id/view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view_head"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/txt_live_tip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/txt_live_tip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mine_head"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/tv_mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:text="夜神月" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorF5F5F5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mine_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/mine_return"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="13dp"
                    android:text="@string/main_mine_myinfo"
                    android:textColor="@color/live_room_title_txt"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mine_login_out"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="13dp"
                    android:text="@string/main_mine_exit"
                    android:textColor="@color/colorFF3838"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <View
                android:id="@+id/view_head2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageButton
                    android:id="@+id/left_btn"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/title_btn_bg"
                    android:src="@drawable/top_tb_back_web"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="15sp"
                    android:text="@string/main_mine_top_title"/>

                <TextView
                    android:id="@+id/tv_commit"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="15sp"
                    android:text="@string/main_mine_commit"
                    android:visibility="gone"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_xiangji"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mine_head_circle_shape"
                android:src="@drawable/xiangji"
                android:scaleType="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="@string/main_mine_username"
                    android:textSize="14sp"
                    android:textColor="@color/txt_color_gray"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/live_room_title_txt"/>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="@color/colorDBDBDB"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="@string/main_mine_sex"
                    android:textSize="14sp"
                    android:textColor="@color/txt_color_gray"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/live_room_title_txt"
                    android:background="@null"
                    android:text="男"
                    android:drawableRight="@drawable/mine_return"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="@color/colorDBDBDB"/>
        </LinearLayout>
    </ViewSwitcher>
</LinearLayout>