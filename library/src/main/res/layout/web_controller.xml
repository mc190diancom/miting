<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/web_controller_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/web_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/top_tb_back_web"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/web_forward"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/mine_return"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/web_refresh"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:scaleType="centerInside"
                android:src="@drawable/webview_refresh" />

            <ImageView
                android:id="@+id/web_stop"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:scaleType="centerInside"
                android:src="@drawable/webview_stop" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_web_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxEms="9"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="15sp"
        android:textColor="@color/color7D7D7D"
        tools:text="@string/home_item_tip"/>
</RelativeLayout>